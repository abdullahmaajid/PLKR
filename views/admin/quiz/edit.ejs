<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    .edit-form {
      max-width: 600px;
      margin: 20px auto;
    }
    .form-group {
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
<!-- Tambahkan ini di bagian atas setelah <body> -->
    <% if (flash) { %>
        <div class="alert alert-<%= flash.type %>">
          <%= flash.message %>
        </div>
      <% } %>

  <%- include('../../partials/sidebar') %>
  
  <div class="container">
    <h1>Edit Pertanyaan</h1>
    
    <form class="edit-form" method="POST" action="/admin/quiz/update/<%= question.id %>">
      <div class="form-group">
        <label>Pertanyaan:</label>
        <textarea name="question" rows="3" required><%= question.question %></textarea>
      </div>
      
      <div class="form-group">
        <label>Opsi Jawaban:</label>
        <input type="text" name="option_a" value="<%= question.option_a %>" required>
        <input type="text" name="option_b" value="<%= question.option_b %>" required>
        <input type="text" name="option_c" value="<%= question.option_c %>" required>
        <input type="text" name="option_d" value="<%= question.option_d %>" required>
      </div>
      
      <div class="form-group">
        <label>Jawaban Benar:</label>
        <select name="correct_answer" required>
          <option value="a" <%= question.correct_answer === 'a' ? 'selected' : '' %>>A</option>
          <option value="b" <%= question.correct_answer === 'b' ? 'selected' : '' %>>B</option>
          <option value="c" <%= question.correct_answer === 'c' ? 'selected' : '' %>>C</option>
          <option value="d" <%= question.correct_answer === 'd' ? 'selected' : '' %>>D</option>
        </select>
      </div>
      
      <div class="form-group">
        <label>Tingkat Kesulitan:</label>
        <select name="difficulty" required>
          <option value="easy" <%= question.difficulty === 'easy' ? 'selected' : '' %>>Mudah</option>
          <option value="medium" <%= question.difficulty === 'medium' ? 'selected' : '' %>>Sedang</option>
          <option value="hard" <%= question.difficulty === 'hard' ? 'selected' : '' %>>Sulit</option>
        </select>
      </div>
      
  

      <!-- Tambahkan tombol back di bagian bawah form -->
<div class="form-actions">
    <button type="submit" class="btn-update">Update Pertanyaan</button>
    <a href="/admin/quiz/module/<%= question.module_id %>" class="btn-back">
      Kembali ke Modul
    </a>
  </div>
    </form>

  </div>
</body>
</html>