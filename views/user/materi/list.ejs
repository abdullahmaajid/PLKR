<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Materi Keuangan</title>
  <style>
    .card-container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .card {
      border: 1px solid #ccc;
      padding: 20px;
      width: calc(33% - 20px);
      box-sizing: border-box;
      border-radius: 8px;
      background-color: #f9f9f9;
    }
    .card h3 {
      margin-top: 0;
    }
    .card a {
      text-decoration: none;
      color: #007bff;
    }
  </style>
</head>
<body>
  <h1>Materi Keuangan</h1>
  <div class="card-container">
    <% modules.forEach(function(module) { %>
      <div class="card">
        <h3><%= module.title %></h3>
        <p><%= module.description %></p>
        <a href="/materi/<%= module.id %>">Baca Selengkapnya</a>
      </div>
    <% }); %>
  </div>
  <br>
  <a href="/">Kembali ke Landing Page</a>
</body>
</html>
